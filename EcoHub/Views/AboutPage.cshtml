                }
            </div>
        </div>
    </section>
}

<!-- Main Content Section -->
@if (Model.HasValue("mainContent"))
{
    <section class="main-content-section">
        <div class="container">
            <div style="max-width: 800px; margin: 0 auto; padding: var(--spacing-xxl) 0;">
                @Html.Raw(Model.Value("mainContent"))
            </div>
        </div>
